<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lfm.feedback.mapper.SysFeedbackMapper">

    <resultMap type="SysFeedback" id="SysFeedbackResult">
        <result property="feedbackId"    column="feedback_id"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="feedbackContent"    column="feedback_content"    />
        <result property="userId"    column="user_id"    />
        <result property="anonymityFlag"    column="anonymity_flag"    />
        <association property="user"    column="user_id" javaType="SysUser" resultMap="com.lfm.system.mapper.SysUserMapper.SysUserResult" />
        <collection  property="sysFeedbackMedias" javaType="java.util.List"  select="com.lfm.feedback.mapper.SysFeedbackMapper.selectSysFeedbackMediaList"     resultMap="SysFeedbackMediaResult" />
    </resultMap>

    <resultMap type="SysFeedbackMedia" id="SysFeedbackMediaResult">
        <result property="feedbackMediaId"    column="feedback_media_id"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="feedbackMediaUrl"    column="feedback_media_url"    />
        <result property="feedbackId"    column="feedback_id"    />
    </resultMap>
    <sql id="selectSysFeedbackMediaVo">
        select feedback_media_id, status, create_by, create_time, update_by, update_time, remark, feedback_media_url, feedback_id from sys_feedback_media
    </sql>

    <select id="selectSysFeedbackMediaList" parameterType="SysFeedbackMedia" resultMap="SysFeedbackMediaResult">
        <include refid="selectSysFeedbackMediaVo"/>
        <where>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="feedbackMediaUrl != null  and feedbackMediaUrl != ''"> and feedback_media_url = #{feedbackMediaUrl}</if>
            <if test="feedbackId != null "> and feedback_id = #{feedbackId}</if>
        </where>
    </select>
</mapper>